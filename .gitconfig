[user]
    name = masahir02
    email = masahir02@users.noreply.github.com
    signingkey = C48DC9346BD36C4D
[color]
    ui = auto
[alias]
    log-graph = log --graph --pretty=format:\"%C(yellow)[%ci] %C(blue)%h %C(magenta)%an %C(cyan)%s\"
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    pager = delta
[init]
    defaultBranch = main
[diff]
    colorMoved = default
[commit]
    gpgsign = true
[push]
    default = simple
[pull]
    rebase = false
[ghq]
    root = ~/src
[delta]
    zero-style = normal
    plus-style = green
    plus-emph-style = black green
    minus-style = red
    minus-emph-style = black red
[interactive]
    diffFilter = delta --color-only
